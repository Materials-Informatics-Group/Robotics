    "center": "CTR",
    "prepare": "PLT",
    "get ready": "PLT",
    "open hand": "REL",
    "close hand": "GRP",
    "lift": "LFT"
  },

  "macros": {
    "runCurrentPhrases": ["run macro", "play macro"],
    "labels": {
      "demo 1": "DM1",
      "wave": "DM2",
      "demo 2": "DM2",
      "dance": "DM3",
      "demo 3": "DM3",
      "safe sleep": "SSLP",
      "safe center": "SCTR",
      "do the dance": "DM3"
